{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "builder": {
            "type": "swc",
            "options": {
                "extensions": [
                    ".ts",
                    ".js"
                ]
            }
        },
        "deleteOutDir": true,
        "typeCheck": true
    }
}

{
    "name": "nestjs-message-queue-gateway-service",
    "version": "0.0.1",
    "type": "module",
    "description": "",
    "author": "Edvinas Sadlevicius",
    "private": true,
    "license": "MIT",
    "imports": {
        "#app/*": "./dist/app/*",
        "#adapters/*": "./dist/adapters/*",
        "#utils/*": "./dist/utils/*"
    },
    "scripts": {
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "npm run build && node --env-file=./config/.env dist/adapters/driving/nestjs-rest-http/entrypoint",
        "start:docker": "docker compose --env-file ./config/.env.test.composition up -d --build",
        "lint": "eslint . --fix",
        "test": "npm run test:unit && npm run test:acceptance",
        "test:unit": "vitest run --reporter=tree --sequence.concurrent ./tests/unit",
        "test:acceptance": "node --env-file=./config/.env.test.acceptance ./node_modules/vitest/vitest.mjs run --reporter=tree --sequence.concurrent ./tests/acceptance",
        "test:acceptance:pipeline": "npm run test:acceptance:prepare && npm run test:acceptance && npm run test:acceptance:cleanup",
        "test:acceptance:prepare": "docker compose --env-file ./config/.env.test.acceptance up -d --build",
        "test:acceptance:cleanup": "docker compose down -v",
        "test:watch": "vitest",
        "test:cov": "vitest run tests --coverage",
        "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
        "prepare": "husky"
    },
    "dependencies": {
        "@aws-sdk/client-sqs": "^3.956.0",
        "@nestjs/common": "^11.0.1",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-express": "^11.0.1",
        "amqplib": "^0.10.9",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.14",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@types/amqplib": "^0.10.8",
        "@types/aws-sdk": "^0.0.42",
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.2",
        "@vitest/coverage-v8": "^4.0.15",
        "eslint": "^9.18.0",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0",
        "vitest": "^4.0.15",
        "wait-on": "^9.0.3"
    }
}
